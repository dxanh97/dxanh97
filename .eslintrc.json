{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "airbnb-typescript",
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "overrides": [
    {
      "files": [
        "*.slice.ts"
      ],
      "rules": {
        "no-param-reassign": [
          "error",
          {
            "props": false
          }
        ]
      }
    }
  ],
  "ignorePatterns": [
    "next.config.js"
  ],
  "rules": {
    "react/function-component-definition": [
      2,
      {
        "namedComponents": "arrow-function"
      }
    ],
    "react/style-prop-object": [
      0
    ],
    "react/require-default-props": [
      0
    ],
    "dot-notation": "off",
    "@typescript-eslint/dot-notation": "off"
  }
}